<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Book Logout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-dark" href="@Url.Action("Index", "Home")">
            <i class="fas fa-key"></i> Book Logout
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Rebuilt</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Confins</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
            </ul>
            <div class="d-flex">
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-dark me-2">Login</a>
                <a href="@Url.Action("SignUp", "Account")" class="btn btn-warning">Sign Up</a>
            </div>
        </div>
    </div>
</nav>

<!-- Dynamic Content -->
<div class="container-fluid p-0">
        @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
